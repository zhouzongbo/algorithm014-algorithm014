/**
 * å‚è€ƒé“¾æ¥: https://leetcode-cn.com/problems/construct-binary-tree-from-preorder-and-inorder-traversal/solution/cong-qian-xu-yu-zhong-xu-bian-li-xu-lie-gou-zao-9/
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode(int x) { val = x; }
 * }
 */
class Solution {
    private Map<Integer, Integer> inMap;
    public TreeNode buildTree(int[] preorder, int[] inorder) {
        // å‰åºéå†: æ ¹ å·¦èŠ‚ç‚¹ å³èŠ‚ç‚¹
        // ä¸­åºéå†: å·¦èŠ‚ç‚¹ æ ¹ å³èŠ‚ç‚¹
        // æŠŠä¸­åºæ•°ç»„åŠ å…¥mapä¸­
        // ä»å‰åºæ•°ç»„ä¸­è·å–çš„ç¬¬ä¸€ä¸ªå…ƒç´ å°±æ˜¯æ ¹èŠ‚ç‚¹, æ ¹èŠ‚ç‚¹å·¦è¾¹å°±æ˜¯  å·¦èŠ‚ç‚¹, å³è¾¹å°±æ˜¯å³èŠ‚ç‚¹
        int preLen = preorder.length;
        int inLen = inorder.length;
        if (preLen != inLen) {
            // è¿™é‡Œç»™å‡ºæ ‘ä¸­æ²¡æœ‰é‡å¤å…ƒç´ , è¯´æ˜è¿™ä¸¤ä¸ªæ•°ç»„åº”è¯¥æ˜¯ç›¸ç­‰çš„
            return null;
        }

        // ä¸­åºæ•°ç»„åŠ å…¥åˆ°Mapä¸­ key: å€¼, value: ä¸‹æ ‡
        inMap = new HashMap<>(inLen);
        for (int i = 0; i < inLen; i++) {
            inMap.put(inorder[i], i);
        }

        return buildTree(preorder, 0, preLen - 1, 0, inLen - 1);
    }


    /**
     * æ„å»ºæ ‘
     * @param preorder å‰åºæ•°ç»„
     * @param inorder ä¸­åºæ•°ç»„
     * @param preLeft å‰åºéå†å­åŒºé—´çš„å·¦è¾¹ç•Œ,
     * @param preRight å‰åºéå†å­åŒºé—´çš„å³è¾¹ç•Œ
     * @param inLeft ä¸­åºéå†å­åŒºé—´çš„å·¦è¾¹ç•Œ
     * @param inRight ä¸­åºéå†å­åŒºé—´çš„å³è¾¹ç•Œ
     * @return
     */
    private TreeNode buildTree(int[] preorder, int preLeft, int preRight, int inLeft, int inRight) {
        // 1.ç»ˆæ­¢æ¡ä»¶: æ²¡æœ‰å¯ç”¨çš„åŒºé—´, åŠ å·¦è¾¹ç•Œå¤§äºå³å³è¾¹ç•Œ
        if (preLeft > preRight || inLeft > inRight) {
            return null;
        }
        // 2.å¤„ç†é€»è¾‘
        // æ‰¾å‡ºæ ¹èŠ‚ç‚¹
        int rootVal = preorder[preLeft];
        // æ„å»ºæ ¹èŠ‚ç‚¹
        TreeNode root = new TreeNode(rootVal);
        // æ‰¾åˆ°ä¸­åºéå†ä¸­çš„æ ¹èŠ‚ç‚¹ä¸‹æ ‡
        int rootIndex = inMap.get(rootVal);
        // 3.è¿›å…¥ä¸‹ä¸€å±‚
        root.left = buildTree(preorder, preLeft + 1, rootIndex - inLeft + preLeft, inLeft, rootIndex - 1);
        root.right = buildTree(preorder,rootIndex - inLeft + preLeft + 1, preRight, rootIndex + 1, inRight);
        // 4.æ›´æ–°çŠ¶æ€ è¿™é‡Œä¸éœ€è¦æ›´æ–°çŠ¶æ€
        return root;
    }
}
