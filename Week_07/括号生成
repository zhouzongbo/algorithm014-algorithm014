//leetcode submit region begin(Prohibit modification and deletion)
class Solution {
    public List<String> generateParenthesis(int n) {
        List<String> answer = new ArrayList<>(n);
        if (n == 0) {
            return answer;
        }
//        dfs("", n , n, answer);
        dfs("", 0, 0, n, answer);
        return answer;
    }


    public void dfs(String str, int left, int right, int len, List<String> ans) {
        // é€’å½’ç»ˆæ­¢æ¡ä»¶
        if (left == len && right == len) {
            ans.add(str);
            return;
        }
        // å‰ªæï¼Œæœ‰ä¸”ä»…å½“å·¦è¾¹å¤§äºå³è¾¹æ—¶æ‰èƒ½æ‰§è¡Œå·¦è¾¹çš„æ“ä½œ
        if (left < right) {
            return;
        }
        // å¤„ç†å½“å‰å±‚é€»è¾‘
        if (left <= len) {
            dfs(str + "(", left + 1, right, len, ans);
        }

        if (right <= len) {
            dfs(str + ")", left, right + 1, len, ans);
        }


    }
//
//    public void dfs(String str, int left, int right, List<String> ans) {
//        // é€’å½’ç»ˆæ­¢æ¡ä»¶
//        if (left == 0 && right == 0) {
//            ans.add(str);
//            return;
//        }
//
//        // å‰ªæï¼Œæœ‰ä¸”ä»…å½“å·¦æ‹¬å·å¤§äºå³æ‹¬å·
//        if (left > right) {
//            return;
//        }
//
//        if (left > 0) {
//            dfs(str + "(", left - 1, right, ans);
//        }
//
//        if (right > 0) {
//            dfs(str + ")", left, right - 1, ans);
//        }
//    }
}
